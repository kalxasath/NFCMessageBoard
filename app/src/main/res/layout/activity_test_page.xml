<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_display_text_tag"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.briankhuu.nfcmessageboard.TestPage">

    <Button
        android:text="ReadMe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:id="@+id/button_readme"
        android:layout_below="@+id/button_write_tag"
        android:layout_alignLeft="@+id/button_write_tag_startActivityForResult"
        android:layout_alignStart="@+id/button_write_tag_startActivityForResult" />

    <Button
        android:text="Launch Write Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/button_write_tag"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/button_readme"
        android:layout_alignStart="@+id/button_readme" />

    <Button
        android:text="Launch Write Tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:id="@+id/button3"
        android:layout_marginLeft="56dp"
        android:layout_marginStart="56dp"
        android:layout_below="@+id/button_write_tag_startActivityForResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Launch Write Tag with return value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="63dp"
        android:id="@+id/button_write_tag_startActivityForResult"
        android:layout_below="@+id/button_readme"
        android:layout_alignLeft="@+id/button3"
        android:layout_alignStart="@+id/button3" />
</RelativeLayout>
